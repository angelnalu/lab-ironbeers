
<div class="rb" >
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="card" >
            <div class="card-body">
            <img class="card-img-bottom" style="width: 80px;" src="{{this.image_url}}" alt="Beer image">
           <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
              <p>Food pairing:</p>
              {{#each this.food_pairing}}<p>{{this}}</p>{{/each}}
              <p>Brewer Tips:</p>
              <p>{{this.brewers_tips}}</p>
              <p class="card-text"><small class="text-muted">{{this.tagline}}</small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

